{
	"$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
	},
	"formatter": {
		"enabled": true,
		"lineEnding": "lf",
		"indentStyle": "tab",
		"lineWidth": 128
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"semicolons": "always",
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"lineEnding": "lf"
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"lineEnding": "lf",
			"lineWidth": 128
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noUnknownAtRules": "off",
				"noArrayIndexKey": "off",
				"noDocumentCookie": "off",
				"noExplicitAny": "off",
				"noNonNullAssertedOptionalChain": "off",
				"noAssignInExpressions": "off",
				"noShadowRestrictedNames": "off"
			},
			"a11y": {
				"useSemanticElements": "off",
				"useAnchorContent": "off",
				"noRedundantRoles": "off",
				"useAriaPropsForRole": "off",
				"useFocusableInteractive": "off",
				"useKeyWithClickEvents": "off",
				"useValidAnchor": "off",
				"useButtonType": "off",
				"useHtmlLang": "off",
				"noSvgWithoutTitle": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noEmptyPattern": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"performance": {
				"noImgElement": "off"
			},
			"complexity": {
				"noBannedTypes": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "error",
					"options": {
						"attributes": ["classList"],
						"functions": ["clsx", "cn", "cva", "tw", "tw.*"]
					},
					"fix": "safe"
				}
			}
		},
		"domains": {
			"next": "recommended",
			"react": "recommended"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [":PACKAGE_WITH_PROTOCOL:", ":PACKAGE:", ":BLANK_LINE:", ":ALIAS:", ":BLANK_LINE:"]
					}
				}
			}
		}
	}
}
